<Window x:Class="HSPacketAnalyzer.Views.PacketInspectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HSPacketAnalyzer.Views"
        xmlns:viewmodels="clr-namespace:HSPacketAnalyzer.ViewModels"
        mc:Ignorable="d">
    <Window.Resources>
        <viewmodels:PacketInspectorViewModel x:Key="ViewModel"/>
    </Window.Resources>

    <Window.Title>
        <Binding Source="{StaticResource ViewModel}" Path="Title"/>
    </Window.Title>
    <Window.Width>
        <Binding Source="{StaticResource ViewModel}" Path="Width" />
    </Window.Width>
    <Window.Height>
        <Binding Source="{StaticResource ViewModel}" Path="Height" />
    </Window.Height>

    <!-- NOTE; Wrap the main content into a panel that's the last child of
    the dockpanel. The last child will fill the parent window. -->
    <DockPanel>

    </DockPanel>
</Window>
